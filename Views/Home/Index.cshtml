@using Crud_Operations.Models
@model List<Student>
@{
    Layout = null;
}
@helper ShowData(List<Student> list)
{
    foreach (var std in list)
    {
        <tr>
            <th scope="row">@std.ID</th>
            <td>@std.Name</td>
            <td>@std.Age</td>
            <td>@std.Gender</td>
            <td>
                <a href="/Home/Update/@std.ID" class="btn btn-primary">update</a>
                <a href="/Home/Delete/@std.ID" class="btn btn-danger">delete</a>
                @*@Html.ActionLink("update", "Update", null, new { @id = std.ID, @class = "btn btn-primary" })
                @Html.ActionLink("delete", "Delete", null, new { @id = std.ID, @class = "btn btn-danger" })*@

            </td>

        </tr>
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Crud Operations</h1>
        @Html.ActionLink("create student", "Create", null, new { @class = "btn btn-primary mb-1 mt-1" })
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                    <th scope="col">operations</th>
                </tr>
            </thead>
            <tbody>
                @ShowData(Model)
            </tbody>
        </table>
    </div>
</body>
</html>
